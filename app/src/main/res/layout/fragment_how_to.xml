<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/howToRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brown_background"
    >

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@drawable/back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/howToTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="HOW TO PLAY"
        android:textColor="#fff7c2"
        android:fontFamily="@font/averia_serif_libre"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="80dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/howToTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Objective -->
            <TextView
                android:id="@+id/tvObjectiveTitle"
                android:fontFamily="@font/averia_serif_libre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="OBJECTIVE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:textColor="#fff7c2" />

            <TextView
                android:id="@+id/tvObjective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averia_serif_libre"
                android:text="Get more stones in your store (large pit on the right of the board) than your opponent (their store is on the left)."
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:textColor="#fff" />
            <!-- The Set Up -->
            <TextView
                android:id="@+id/tvSetUpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET UP"
                android:fontFamily="@font/averia_serif_libre"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:textColor="#fff7c2" />

            <TextView
                android:id="@+id/tvSetUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averia_serif_libre"
                android:paddingTop="4dp"
                android:text="Each player has six small pits in front of them and a store on their right. Each hole starts with 4 stones. Stores start empty. "
                android:textColor="#fff"
                android:textSize="18sp" />
            <!-- The Basics -->
            <TextView
                android:id="@+id/tvBasicsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BASICS"
                android:fontFamily="@font/averia_serif_libre"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:textColor="#fff7c2" />

            <TextView
                android:id="@+id/tvBasics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averia_serif_libre"
                android:paddingTop="4dp"
                android:text="Players take turns. On your turn, select one of your six small pits, pick up all the stones from it, and drop them in the following holes one by one, moving counter-clockwise. Players drop marbles in their own store but skipping the opponent’s store."
                android:textColor="#fff"
                android:textSize="18sp" />
            <!-- Extra Turn -->
            <TextView
                android:id="@+id/tvExtraTitle"
                android:fontFamily="@font/averia_serif_libre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXTRA TURN"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:textColor="#fff7c2" />
            <TextView
                android:id="@+id/tvExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If your last stone lands in your store, you get another turn."
                android:textSize="18sp"
                android:paddingTop="4dp"        
                android:fontFamily="@font/averia_serif_libre"
                android:textColor="#fff" />
            <!-- Capturing Stones -->
            <TextView
                android:id="@+id/tvCaptureTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAPTURE STONES"
                android:fontFamily="@font/averia_serif_libre"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:textColor="#fff7c2" />
            <TextView
                android:id="@+id/tvCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If your last stone lands in an empty pit on your side AND the opposite pit has stones, you capture all stones from both pits and move them into your store."
                android:textSize="18sp"
                android:fontFamily="@font/averia_serif_libre"
                android:paddingTop="4dp"
                android:textColor="#fff" />
            <!-- When the Game Ends -->
            <TextView
                android:id="@+id/tvEndTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAME OVER"
                android:fontFamily="@font/averia_serif_libre"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:textColor="#fff7c2" />
            <TextView
                android:id="@+id/tvEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averia_serif_libre"
                android:text="The game ends when all six pits on one side are empty. The opponent then moves any remaining stones on their side into their store. Count stones in each store—higher total wins."
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"
                android:textColor="#fff" />
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
